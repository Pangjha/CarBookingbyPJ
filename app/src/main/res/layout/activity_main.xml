<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/wall1"
        tools:context=".MainActivity">
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:text="Number"
          android:ems="10"
          android:id="@+id/editText" android:layout_marginBottom="16dp"
          app:layout_constraintBottom_toTopOf="@+id/editText2" app:layout_constraintTop_toBottomOf="@+id/imageButton"
          android:textAlignment="center" android:textColor="#F7EEEE" android:fontFamily="@font/comfortaa"
          android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:text="Brand"
          android:ems="10"
          android:id="@+id/editText2" android:layout_marginBottom="16dp"
          app:layout_constraintBottom_toTopOf="@+id/editText3" app:layout_constraintTop_toBottomOf="@+id/editText"
          android:textAlignment="center" android:textColor="#F7EEEE" android:fontFamily="@font/comfortaa"
          android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:text="Name"
          android:ems="10"
          android:id="@+id/editText3"
          app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintBottom_toTopOf="@+id/button2"
          android:textAlignment="center" android:textColor="#F7EEEE" android:fontFamily="@font/comfortaa"
          android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
  <Button
          android:text="update"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/button2" android:layout_marginTop="24dp"
          app:layout_constraintTop_toBottomOf="@+id/editText3"
          app:layout_constraintBottom_toTopOf="@+id/button3" android:textColor="@color/colorPrimary"
          android:background="@color/cardview_shadow_end_color" android:layout_marginStart="8dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent" android:textColorHint="#FDFFFFFF"
          android:fontFamily="@font/comfortaa" android:textSize="30sp"/>
  <Button
          android:text="delete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/button3" android:layout_marginTop="2dp"
          app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintBottom_toBottomOf="parent"
          android:shadowColor="#00FCFAFA" android:textColor="@color/colorAccent"
          android:background="@color/cardview_shadow_end_color" android:layout_marginStart="8dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent" android:textColorHint="@color/cardview_light_background"
          android:fontFamily="@font/comfortaa" android:textSize="30sp"/>
  <ImageButton
          android:layout_width="80dp"
          android:layout_height="86dp" app:srcCompat="@drawable/ready1"
          android:id="@+id/imageButton"
          app:layout_constraintEnd_toStartOf="@+id/imageButton2" android:layout_marginEnd="8dp"
          app:layout_constraintStart_toEndOf="@+id/imageButton3" app:layout_constraintHorizontal_bias="0.5"
          android:background="@android:color/transparent"
          android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
          android:scaleType="fitCenter"/>
  <ImageButton
          android:layout_width="80dp"
          android:layout_height="86dp" app:srcCompat="@drawable/full1"
          android:id="@+id/imageButton3"
          app:layout_constraintEnd_toStartOf="@+id/imageButton" android:layout_marginEnd="8dp"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
          android:background="@android:color/transparent"
          android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
          android:scaleType="fitCenter"/>
  <ImageButton
          android:layout_width="80dp"
          android:layout_height="86dp" app:srcCompat="@drawable/ready1"
          android:id="@+id/imageButton2"
          app:layout_constraintStart_toEndOf="@+id/imageButton" app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintEnd_toEndOf="parent" android:background="@android:color/transparent"
          android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
          android:scaleType="fitCenter"/>
  <TextView
          android:text="CarBooking"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/textView3" android:textSize="30sp"
          android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>